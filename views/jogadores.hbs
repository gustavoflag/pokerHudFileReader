<div class="flex-wrap justify-center">
    <p>
        ORDENAR POR:
        <a class="button" id="link-nome" href="/">
            Nome
        </a>&nbsp;
        <a class="button" id="link-vpip" href="/order/vpip">
            VPIP
        </a>&nbsp;
        <a class="button" id="link-pfR" href="/order/pfR">
            PFR
        </a>&nbsp;
        <a class="button" id="link-CR" href="/order/CR">
            Check-raise
        </a>&nbsp;
        <a class="button" id="link-pf3B" href="/order/pf3B">
            3-Bet
        </a>&nbsp;
        <a class="button" id="link-CBet" href="/order/CBet">
            C-Bet
        </a>
    </p>
</div>
<div class="flex-wrap justify-center">
    {{#if jogadores}}
        {{#jogadores}}
        <div class="box-big">
            <div class="float-right">
                <button type="button" class="btn-link" onclick="javascript:window.open ('/popup/{{nome}}','{{nome}}','width=5, height=5, scrollbars=no, menubar=no, location=no, resizable=no, directories=no, status=no, toolbar=no, titlebar=no' );">
                    <img src="assets/img/popup.svg" />
                </button>
            </div>
            <a href="/jogador/{{nome}}">
                <h3>{{nome}}</h3>
                <div class="box-big-content">
                    <div class="box">
                        <h4>VPIP</h4>
                        {{toFixed estatisticas.vpip 0}}%
                    </div>
                    <div class="box">
                        <h4>PFR</h4>
                        {{toFixed estatisticas.pfR 0}}%
                    </div>
                    <div class="box">
                        <h4>Check-raise</h4>
                        {{toFixed estatisticas.CR 0}}%
                    </div>
                    <div class="box">
                        <h4>3-Bet</h4>
                        {{toFixed estatisticas.pf3B 1}}%
                    </div>
                    <div class="box">
                        <h4>Fold to 3-Bet</h4>
                        {{toFixed estatisticas.pfF3B 0}}%
                    </div>
                    <div class="box">
                        <h4>C-Bet</h4>
                        {{toFixed estatisticas.CBet 0}}%
                    </div>
                    <div class="box">
                        <h4>Fold to C-Bet</h4>
                        {{toFixed estatisticas.FCBet 0}}%
                    </div>
                    <div class="box">
                        <h4>MÃ£os</h4>
                        {{toFixed maos 0}}
                    </div>
                </div>
            </a>
        </div>
        {{/jogadores}}
    {{else}}
        <p>Nenhum jogador encontrado!</p>
    {{/if}}
</div>
<script>
     $(function() {
            var url = document.URL;

            if (url.indexOf('/vpip') != -1){
                $("#link-vpip").addClass('button-active');
            } else if (url.indexOf('/pfR') != -1){
                $("#link-pfR").addClass('button-active');
            } else if (url.indexOf('/CR') != -1){
                $("#link-CR").addClass('button-active');
            } else if (url.indexOf('/pf3B') != -1){
                $("#link-pf3B").addClass('button-active');
            } else if (url.indexOf('/CBet') != -1){
                $("#link-CBet").addClass('button-active');
            } else {
                $("#link-nome").addClass('button-active');
            } 
     });    
</script>